<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.diploma.volodymyr.bicyclecity">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".common.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.here.android.maps.appid"
            android:value="@string/here_app_id" />
        <meta-data
            android:name="com.here.android.maps.apptoken"
            android:value="@string/here_app_code" />
        <meta-data
            android:name="com.here.android.maps.license.key"
            android:value="@string/here_license" />

        <activity
            android:name=".ui.activity.navigation.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activity.auth.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.auth.SignUpActivity" />
        <activity
            android:name=".ui.activity.groupride.CreateGroupRideActivity"
            android:label="@string/title_activity_create_group_ride"
            android:parentActivityName=".ui.activity.navigation.MenuActivity" />
        <activity
            android:name=".ui.activity.SelectRouteActivity"
            android:label="@string/title_activity_create_group_ride_route"
            android:parentActivityName=".ui.activity.groupride.CreateGroupRideActivity" />
        <activity
            android:name=".ui.activity.groupride.GroupRideDetailsActivity"
            android:parentActivityName=".ui.activity.navigation.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.competition.CreateCompetitionActivity"
            android:label="@string/title_activity_create_competition"
            android:parentActivityName=".ui.activity.navigation.MenuActivity" />
        <activity android:name=".ui.activity.competition.CompetitionDetailsActivity" />
        <activity
            android:name=".ui.activity.competition.CompetitionResultActivity"
            android:label="@string/title_activity_competition_result" />

        <service
            android:name="com.here.android.mpa.service.MapService"
            android:exported="false"
            android:label="@string/bicycle_city_here_service">
            <intent-filter>
                <action android:name="Bicycle City HERE Service" />
            </intent-filter>
        </service>
    </application>

</manifest>